{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "order_number": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "total_amount": {
      "type": "integer",
      "required": true,
      "description": "Total amount in cents"
    },
    "order_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "printing",
        "printed",
        "assembling",
        "packaged",
        "shipped",
        "in_transit",
        "out_for_delivery",
        "delivered",
        "canceled",
        "returned"
      ],
      "default": "pending",
      "description": "Unified order status combining packing and shipping stages"
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "completed",
        "failed",
        "refunded"
      ],
      "default": "pending"
    },
    "discount_total": {
      "type": "integer",
      "description": "Discount total in cents"
    },
    "payment_intent_id": {
      "type": "string"
    },
    "ordered_at": {
      "type": "datetime",
      "required": true
    },
    "shipped_at": {
      "type": "datetime",
      "description": "When the order was shipped"
    },
    "delivered_at": {
      "type": "datetime",
      "description": "When the order was delivered"
    },
    "estimated_delivery_date": {
      "type": "date",
      "description": "Estimated delivery date from carrier"
    },
    "customer_name": {
      "type": "string",
      "required": true
    },
    "customer_phone": {
      "type": "string"
    },
    "customer_email": {
      "type": "email",
      "description": "Customer email (for logged in users or guests)"
    },
    "payment_method": {
      "type": "string"
    },
    "discount_code": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::discount-code.discount-code",
      "inversedBy": "orders"
    },
    "shipping_method": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::shipping-option.shipping-option"
    },
    "tracking_number": {
      "type": "string"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "sales_tax": {
      "type": "integer",
      "description": "Sales tax in cents"
    },
    "shipping_cost": {
      "type": "integer",
      "description": "Shipping cost in cents"
    },
    "subtotal": {
      "type": "integer",
      "required": true,
      "description": "Subtotal in cents"
    },
    "transaction_fee": {
      "type": "integer",
      "default": 50,
      "description": "Transaction fee in cents"
    },
    "guest_email": {
      "type": "email"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "shipping_address": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::address.address"
    },
    "billing_address": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::address.address"
    },
    "payment_last_four": {
      "type": "string"
    },
    "confirmation_email_sent": {
      "type": "boolean",
      "default": false
    },
    "shipping_notification_sent": {
      "type": "boolean",
      "default": false
    },
    "easypost_rate_id": {
      "type": "string",
      "description": "Selected EasyPost rate ID"
    },
    "easypost_shipment_id": {
      "type": "string",
      "description": "EasyPost shipment ID"
    },
    "easypost_tracker_id": {
      "type": "string",
      "description": "EasyPost tracker ID for tracking updates"
    },
    "carrier_service": {
      "type": "string",
      "description": "Carrier and service name (e.g., USPS Priority Mail)"
    },
    "package_weight_oz": {
      "type": "decimal",
      "description": "Final package weight in ounces"
    },
    "package_length": {
      "type": "decimal",
      "description": "Package length in inches"
    },
    "package_width": {
      "type": "decimal",
      "description": "Package width in inches"
    },
    "package_height": {
      "type": "decimal",
      "description": "Package height in inches"
    },
    "shipping_box": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::shipping-box.shipping-box"
    },
    "admin_notes": {
      "type": "text",
      "description": "Internal notes for order fulfillment"
    },
    "google_sheet_row": {
      "type": "integer",
      "description": "Row number in Google Sheet for this order"
    },
    "admin_hidden": {
      "type": "boolean",
      "default": false,
      "description": "If true, order is hidden from admin orders page but still visible in Strapi"
    }
  }
}